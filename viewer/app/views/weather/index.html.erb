<div class="max-w-4xl mx-auto my-10">
  <h1 class="text-3xl font-semibold mb-6 text-center text-gray-800">
    Прогноз погоды (NATS)
  </h1>

  <div class="shadow-md rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gradient-to-r from-purple-200 to-pink-200 dark:from-gray-800 dark:to-gray-900">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wide dark:text-gray-300">
            Город
          </th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wide dark:text-gray-300">
            Температура (°C)
          </th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wide dark:text-gray-300">
            Получено
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @messages.each do |record| %>
          <tr class="transition-colors duration-200 ease-in-out odd:bg-white even:bg-gray-50 dark:odd:bg-gray-800 dark:even:bg-gray-900 hover:bg-gray-100 dark:hover:bg-gray-700">
            <td class="px-6 py-4 text-sm text-gray-800 font-medium dark:text-gray-200">
              <%= record.city.name %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">
              <%= record.temp_c %>&deg;C
            </td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
              <%= l(record.fetched_at, format: :short) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
